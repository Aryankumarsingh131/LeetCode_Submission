class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long long cnt0 = 0, a = 0;

        for (int num : nums) {
            if (num == 0) {
                a++;
                cnt0 += a;
            } else {
                a = 0;
            }
        }

        return cnt0;
    }
};
